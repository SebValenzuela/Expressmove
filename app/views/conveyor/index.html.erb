<p id="notice"><%= notice %></p>

<h1>Conveyor</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Date</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conveyors.each do |conveyor| %>
      <tr>
        <td><%= conveyor.product %></td>
        <td><%= conveyor.date %></td>
        <td><%= conveyor.address %></td>
        <td><%= link_to 'Show', conveyor %></td>
        <td><%= link_to 'Edit', edit_conveyor_path(conveyor) %></td>
        <td><%= link_to 'Destroy', conveyor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

